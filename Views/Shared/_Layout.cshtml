<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Supermarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css">
</head>
<body>
<header class="p-3 bg-dark text-white">
    <div class="container justify-content-center">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Supermarket</a>
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a class="nav-link px-2 text-secondary" 
                 asp-controller="Home"
                 asp-action="Index">Home</a></li>
          <li><a class="nav-link px-2 text-white" 
                 asp-controller="Categories"
                 asp-action="Index">Categories</a></li>
        </ul>
        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>
        <div class="text-end">
          <button type="button" class="btn btn-outline-info me-2">Login</button>
          <button type="button" class="btn btn-outline-success">Sign-up</button>
        </div>
      </div>
    </div>
  </header>
<div class="container-fluid container-xl">
    @RenderBody()
</div>
<div>
  @RenderSection("title",required:false)
</div>
@Html.Partial("_Footer");
</body>
</html>