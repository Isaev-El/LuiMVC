@model Category[]
<table class="table table-striped">
    <thead>
    <tr>
    <th>
        Name
    </th>
    <th>
        Description
    </th>
    <th>
        Edit
    </th>
    </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Descriptions
                    </td>
                    <td>
                        <a class="btn btn-outline-primary"
                           asp-controller="Categories"
                           asp-action="Edit"
                           asp-route-id="@item.CategoryId">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
